#f
wurf<-function(n=1){
    wurf1<-sample(1:6,1)
    wurf2<-sample(1:6,1)
    wert<--4
    if (wurf1==6) wert<-20
    else if (wurf1==1) {     
        if ((wurf2==1)|(wurf2==6)) wert<-100
        else wert<--30
    }
    return(wert)
}
mean(replicate(100000,wurf()))
